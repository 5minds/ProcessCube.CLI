{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":dependencyDashboard",
    ":semanticPrefixFixDepsChoreOthers",
    ":ignoreModulesAndTests",
    "group:monorepos",
    "group:recommended",
    "replacements:all",
    "workarounds:all"
  ],
  "schedule": ["* 0-7 1 * *"],
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10,
  "reviewers": ["S3bastianGriesa", "ElRaptorus"],
  "ignoreDeprecated": true,
  "ignoreUnstable": true,
  "ignoreDeps": [
    "chalk",
    "open",
    "tar",
    "marked",
    "openid-client",
    "@5minds/processcube_engine_sdk",
    "@5minds/processcube_engine_client"
  ],
  "updateLockFiles": true,
  "automerge": true,
  "packageRules": [
    {
      "groupName": "All Dev Dependencies Minor",
      "groupSlug": "dev-minor",
      "matchDepTypes": ["devDependencies"],
      "automerge": true,
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": ["*"]
    },
    {
      "groupName": "All Dev Dependencies Major",
      "groupSlug": "dev-major",
      "matchDepTypes": ["devDependencies"],
      "automerge": true,
      "matchUpdateTypes": ["major"],
      "matchPackageNames": ["*"]
    },
    {
      "groupName": "All Prod Dependencies Minor",
      "groupSlug": "prod-minor",
      "matchDepTypes": ["dependencies"],
      "automerge": true,
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": ["*"]
    },
    {
      "groupName": "All Prod Dependencies Major",
      "groupSlug": "prod-major",
      "matchDepTypes": ["dependencies"],
      "automerge": true,
      "matchUpdateTypes": ["major"],
      "matchPackageNames": ["*"]
    }
  ]
}
